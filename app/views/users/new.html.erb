<main>
	<h1 class="text-2xl font-bold mb-4">Sign Up</h1>

	<%= form_with model: @user do |f| %>
		<% if f.object.errors.any? %>
			<% f.object.errors.full_messages.each do |message| %>
				<div class="text-red-500 mb-2"><%= message %></div>
			<% end %>
		<% end %>

		<div class="mb-4">
			<%= f.label :name, class: "block font-medium mb-1" %>
			<%= f.text_field :name, autofocus: true, class: "w-full border border-gray-300 rounded px-3 py-2" %>
		</div>

		<div class="mb-4">
			<%= f.label :email, class: "block font-medium mb-1" %>
			<%= f.email_field :email, class: "w-full border border-gray-300 rounded px-3 py-2" %>
		</div>

		<div class="mb-4">
			<%= f.label :password, class: "block font-medium mb-1" %>
			<%= f.password_field :password, class: "w-full border border-gray-300 rounded px-3 py-2" %>
		</div>

		<div class="mb-4">
			<%= f.label :password_confirmation, class: "block font-medium mb-1" %>
			<%= f.password_field :password_confirmation, class: "w-full border border-gray-300 rounded px-3 py-2" %>
		</div>

		<div>
			<%= f.submit "Sign Up", class: "bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded" %>
		</div>
	<% end %>
</main>