<h1 class="text-2xl font-bold mb-4">Login</h1>

<%= form_with model: @user, url: session_path do |f| %> 
	<div class="mb-4">
		<%= f.label :email, class: "block font-semibold" %>
		<%= f.email_field :email, class: "border border-gray-300 px-4 py-2 rounded-md w-full" %>
	</div>

	<div class="mb-4">
		<%= f.label :password, class: "block font-semibold" %>
		<%= f.password_field :password, class: "border border-gray-300 px-4 py-2 rounded-md w-full" %>
	</div>

	<div>
		<%= f.submit "Log in", class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold px-4 py-2 rounded-md" %>
	</div>
<% end %>